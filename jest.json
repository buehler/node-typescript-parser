{
    "collectCoverage": true,
    "mapCoverage": true,
    "transform": {
        "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
        "**/test/**/*.spec.ts"
    ],
    "testPathIgnorePatterns": [
        "/node_modules/",
        "_workspace/"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "json"
    ]
}
